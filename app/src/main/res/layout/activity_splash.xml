<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_splash_introduce"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:text="세상에 없던\n멀티자아\n기록 플랫폼"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="124dp"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="189dp"
        android:layout_height="49dp"
        android:src="@drawable/splash_logo"
        android:layout_marginTop="69dp"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_introduce"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_splash_logo"
        android:orientation="vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        >
        <TextView
            android:textAlignment="center"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:id="@+id/login_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:background="@drawable/signup_bt_background"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_main"
            android:layout_marginBottom="15dp"
            />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/bt_login_kakao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_kakao_button"
            android:textColor="@color/color_main"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/bt_login_naver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="네이버 로그인"
            android:background="@drawable/signup_bt_background"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_main"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/bt_login_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구글로그인"
            android:background="@drawable/signup_bt_background"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_main"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>