<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".presentation.home.posting.PostingCategoryFragment">

    <ImageButton
        android:id="@+id/btn_posting_category_out"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#00ff0000"
        android:padding="10dp"
        android:contentDescription="@string/btn_out"
        app:layout_constraintBottom_toBottomOf="@+id/title_posting_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_posting_category"
        app:srcCompat="@drawable/ic_x" />


    <TextView
        android:id="@+id/title_posting_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="@string/category"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_posting_category">

        <ImageView
            android:id="@+id/image_art"
            android:layout_width="29dp"
            android:layout_height="37dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/art"
            app:srcCompat="@drawable/art" />

        <Button
            android:id="@+id/btn_art"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00ff0000"
            android:gravity="center_vertical"
            android:text="@string/art"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/image_sports"
            android:layout_width="29dp"
            android:layout_height="37dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/sports"
            app:srcCompat="@drawable/sports" />

        <Button
            android:id="@+id/btn_sports"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00ff0000"
            android:gravity="center_vertical"
            android:text="@string/sports"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ImageView
            android:id="@+id/image_self"
            android:layout_width="29dp"
            android:layout_height="37dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/self"
            app:srcCompat="@drawable/running" />

        <Button
            android:id="@+id/btn_self"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00ff0000"
            android:gravity="center_vertical"
            android:text="@string/self"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <ImageView
            android:id="@+id/image_etc"
            android:layout_width="29dp"
            android:layout_height="37dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/etc"
            app:srcCompat="@drawable/etc" />

        <Button
            android:id="@+id/btn_etc"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00ff0000"
            android:gravity="center_vertical"
            android:text="@string/etc"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
