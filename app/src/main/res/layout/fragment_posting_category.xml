<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".presentation.home.posting.PostingCategoryFragment">

    <ImageButton
        android:id="@+id/btn_posting_category_out"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="28dp"
        android:background="#00ff0000"
        android:contentDescription="@string/btn_out"
        app:layout_constraintBottom_toBottomOf="@+id/title_posting_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_posting_category"
        app:srcCompat="@drawable/close" />


    <TextView
        android:id="@+id/title_posting_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="@string/category"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_art"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="19dp"
        android:background="#00ff0000"
        android:gravity="center_vertical"
        android:text="@string/art"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_posting_category" />

    <Button
        android:id="@+id/btn_sports"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="64dp"
        android:background="#00ff0000"
        android:gravity="center_vertical"
        android:text="@string/sports"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_art" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="10dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toTopOf="@+id/view_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_art"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="@+id/btn_self"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F5F5F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_self" />

    <Button
        android:id="@+id/btn_self"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="64dp"
        android:background="#00ff0000"
        android:gravity="center_vertical"
        android:text="@string/self"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sports" />

    <Button
        android:id="@+id/btn_etc"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="64dp"
        android:background="#00ff0000"
        android:gravity="center_vertical"
        android:text="@string/etc"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_self" />

    <ImageView
        android:id="@+id/image_art"
        android:layout_width="29dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/art"
        app:layout_constraintEnd_toStartOf="@+id/btn_art"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_posting_category_out"
        app:srcCompat="@drawable/art" />

    <ImageView
        android:id="@+id/image_sports"
        android:layout_width="29dp"
        android:layout_height="37dp"
        android:layout_marginTop="84dp"
        android:contentDescription="@string/sports"
        app:layout_constraintEnd_toStartOf="@+id/btn_sports"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_posting_category_out"
        app:srcCompat="@drawable/sports" />

    <ImageView
        android:id="@+id/image_self"
        android:layout_width="29dp"
        android:layout_height="37dp"
        android:layout_marginTop="136dp"
        android:contentDescription="@string/self"
        app:layout_constraintEnd_toStartOf="@+id/btn_self"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_posting_category_out"
        app:srcCompat="@drawable/running" />

    <ImageView
        android:id="@+id/image_etc"
        android:layout_width="29dp"
        android:layout_height="37dp"
        android:layout_marginTop="188dp"
        android:contentDescription="@string/etc"
        app:layout_constraintEnd_toStartOf="@+id/btn_etc"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_posting_category_out"
        app:srcCompat="@drawable/etc" />


</androidx.constraintlayout.widget.ConstraintLayout>
