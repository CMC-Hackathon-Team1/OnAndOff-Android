<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginTop="55.72dp"
        android:layout_marginLeft="25.97dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 생성"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성하기"
        android:textColor="#58B8A1"
        android:textSize="14sp"
        android:layout_marginEnd="21dp"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_mypage_profile_avatar"
        android:layout_height="95dp"
        android:layout_width="95dp"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        android:src="#D6D6D6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="78dp"
        />
    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_iv"
            android:layout_width="49.77dp"
            android:layout_height="52.11dp"
            android:layout_gravity="center"
            app:civ_border_overlay="true"
            app:civ_border_width="0dp"
            tools:ignore="MissingConstraints"
            android:src="@drawable/icon_profile_default"
            app:layout_constraintStart_toStartOf="@id/iv_mypage_profile_avatar"
            app:layout_constraintEnd_toEndOf="@id/iv_mypage_profile_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_mypage_profile_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_mypage_profile_avatar"
    />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_mypage_add_background"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        app:civ_border_overlay="true"
        app:civ_border_width="0dp"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        tools:ignore="MissingConstraints"
        android:src="#777777"
        android:layout_marginTop="138dp"
        app:layout_constraintEnd_toEndOf="@id/iv_mypage_profile_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_mypage_profile_avatar"
        />
    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_mypage_add_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:civ_border_overlay="true"
            app:civ_border_width="0dp"
            tools:ignore="MissingConstraints"
            android:src="@drawable/ic_baseline_camera_alt_24"
            app:layout_constraintStart_toStartOf="@id/iv_mypage_add_background"
            app:layout_constraintEnd_toEndOf="@id/iv_mypage_add_background"
            app:layout_constraintTop_toTopOf="@id/iv_mypage_add_background"
            app:layout_constraintBottom_toBottomOf="@id/iv_mypage_add_background"
            />


    <TextView
        android:id="@+id/tv_personas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="페르소나?"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="31dp"
        app:layout_constraintTop_toBottomOf="@id/iv_mypage_profile_avatar"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_personas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="작가"
        android:textSize="12sp"
        android:layout_marginLeft="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/tv_personas"
        app:layout_constraintBottom_toBottomOf="@id/tv_personas"
        app:layout_constraintStart_toEndOf="@id/tv_personas" />

    <View
        android:id="@+id/view_personas"
        android:layout_width="151dp"
        android:layout_height="1dp"
        android:background="#9A9A9A"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintStart_toStartOf="@id/tv_personas"
        app:layout_constraintTop_toBottomOf="@id/tv_personas"/>


    <TextView
        android:id="@+id/tv_oneline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="31dp"
        app:layout_constraintTop_toBottomOf="@id/tv_personas"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_oneline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="키키"
        android:textSize="12sp"
        android:layout_marginLeft="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/tv_oneline"
        app:layout_constraintBottom_toBottomOf="@id/tv_oneline"
        app:layout_constraintStart_toEndOf="@id/tv_oneline"/>

    <View
        android:id="@+id/view_oneline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9A9A9A"
        android:layout_marginTop="9dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintTop_toBottomOf="@id/tv_oneline"
        app:layout_constraintStart_toStartOf="@id/view_personas"
        app:layout_constraintEnd_toEndOf="@id/view_nickname"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한줄소개"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginEnd="31dp"
        app:layout_constraintTop_toTopOf="@id/tv_personas"
        app:layout_constraintStart_toEndOf="@id/tv_personas"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="최대 30자까지 가능합니다"
        android:textSize="12sp"
        android:layout_marginLeft="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/tv_personas"
        app:layout_constraintBottom_toBottomOf="@id/tv_personas"
        app:layout_constraintStart_toEndOf="@id/tv_nickname"/>

    <View
        android:id="@+id/view_nickname"
        android:layout_width="151dp"
        android:layout_height="1dp"
        android:background="#9A9A9A"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintStart_toStartOf="@id/tv_nickname"
        app:layout_constraintTop_toBottomOf="@id/tv_personas"/>
</androidx.constraintlayout.widget.ConstraintLayout>