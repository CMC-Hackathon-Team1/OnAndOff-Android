<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircularSector">
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/normal_dp_size</item>
        <item name="cornerSizeTopLeft">@dimen/normal_dp_size</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textAlignment">center</item>
<!--        <item name="android:backgroundTint">@color/color_main</item>-->
        <item name="android:theme">@style/SelectableItemTheme</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="strokeColor">@color/color_main</item>
        <item name="strokeWidth">1dp</item>
<!--        <item name="android:backgroundTint">@color/white</item>-->
        <item name="android:theme">@style/SelectableItemTheme</item>
    </style>

    <style name="SelectableItemTheme" parent="ThemeOverlay.MaterialComponents">
<!--        <item name="colorControlHighlight">@color/white</item>-->
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!--FilledBox일 경우 밑줄 색상, OutlinedBox일 경우 테두리 색상-->
        <item name="boxStrokeColor">@drawable/selector_text_input_color</item>
        <!--Counter-->
        <item name="counterTextAppearance">@style/CounterTextAppearance</item>
        <!--EditText에 있을때의 Hint-->
        <item name="android:textColorHint">@color/black_fifth</item>
        <!--상단에 있을때의 Hint-->
        <item name="hintTextColor">@color/black_fifth</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <!--Helper-->
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <!--Error-->
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/errorColor</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextAppearance">
<!--        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HelperTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CounterTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RounderBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundBottomSheet</item>
    </style>

    <style name="RoundBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_border</item>
    </style>

</resources>
